<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zkq.fuxi.ui.welcome.WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/in_icon" />

        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_chaos"
            android:textColor="@color/blue_beika"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_chaos"
            android:textColor="@color/blue_beika"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_begin_time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_chaos"
            android:textColor="@color/blue_beika"
            android:layout_below="@+id/tv_now_time"
            android:textSize="16sp" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
